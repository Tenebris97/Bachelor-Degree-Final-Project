@model FinalProject.Models.CellphoneAddEdit

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, FinalProject

@{
    ViewData["Title"] = "ثبت کالا";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<ol class="breadcrumb bg-transparent">
    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">خانه</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Admin" asp-action="Index"> پنل ادمین</a></li>
    <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Cellphone" asp-action="Index"> جزییات گوشی موبایل</a></li>
    <li class="breadcrumb-item active"> افزودن جزئیات</li>
</ol>

<div class="card bg-dark">
    <div class="card-header text-white">
        ثبت جزئیات گوشی 
    </div>
    <div class="card-body">
        <form asp-action="Add" role="form" asp-controller="Laptop" method="post" class="text-white">
            <div class="form-group d-none col-md-6">
                <label asp-for="CellphoneId"></label>
                <div>
                    <input asp-for="CellphoneId" class="form-control" type="hidden" />
                </div>
            </div>

            <h5 class="addformH">انتخاب گوشی موبایل</h5>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="ProductId"></label>
                    <select asp-for="ProductId" asp-items="@Model.Products" class="form-control"></select>
                </div>
            </div>
            <hr id="AddformHr" />

            <h5 class="addformH">مشخصات کلی</h5>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="Size"></label>
                    <input asp-for="Size" class="form-control" />
                    <span asp-validation-for="Size" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Weight"></label>
                    <input asp-for="Weight" class="form-control" />
                    <span asp-validation-for="Weight" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="SimcardDesc"></label>
                    <input asp-for="SimcardDesc" class="form-control" />
                    <span asp-validation-for="SimcardDesc" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="SimcardCount"></label>
                    <input asp-for="SimcardCount" class="form-control" />
                    <span asp-validation-for="SimcardCount" class="text-danger"></span>
                </div>
            </div>
            <hr id="AddformHr" />

            <h5 class="addformH">پردازنده</h5>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="CpuChipset"></label>
                    <input asp-for="CpuChipset" class="form-control" />
                    <span asp-validation-for="CpuChipset" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="CpuCore"></label>
                    <input asp-for="CpuCore" class="form-control" />
                    <span asp-validation-for="CpuCore" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="CpuType"></label>
                    <input asp-for="CpuType" class="form-control" />
                    <span asp-validation-for="CpuType" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="CpuFrequency"></label>
                    <input asp-for="CpuFrequency" class="form-control" />
                    <span asp-validation-for="CpuFrequency" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="GPU"></label>
                    <input asp-for="GPU" class="form-control" />
                    <span asp-validation-for="GPU" class="text-danger"></span>
                </div>
            </div>
            <hr id="AddformHr" />

            <h5 class="addformH">حافظه</h5>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="RAM"></label>
                    <input asp-for="RAM" class="form-control" />
                    <span asp-validation-for="RAM" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Storage"></label>
                    <input asp-for="Storage" class="form-control" />
                    <span asp-validation-for="Storage" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="StorageType"></label>
                    <input asp-for="StorageType" class="form-control" />
                    <span asp-validation-for="StorageType" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="StorageSupport"></label>
                    <input asp-for="StorageSupport" class="form-control" />
                    <span asp-validation-for="StorageSupport" class="text-danger"></span>
                </div>
            </div>
            <hr id="AddformHr" />

            <h5 class="addformH">صفحه نمایش</h5>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="ScreenSize"></label>
                    <input asp-for="ScreenSize" class="form-control" />
                    <span asp-validation-for="ScreenSize" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="ScreenTechnology"></label>
                    <input asp-for="ScreenTechnology" class="form-control" />
                    <span asp-validation-for="ScreenTechnology" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="ScreenType"></label>
                    <input asp-for="ScreenType" class="form-control" />
                    <span asp-validation-for="ScreenType" class="text-danger"></span>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="ScreenProtector"></label>
                    <input asp-for="ScreenProtector" class="form-control" />
                    <span asp-validation-for="ScreenProtector" class="text-danger"></span>
                </div>
            </div>
            <hr id="AddformHr" />

            <h5 class="addformH">ارتباطات</h5>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="ConnectionNetworks"></label>
                    <input asp-for="ConnectionNetworks" class="form-control" />
                    <span asp-validation-for="ConnectionNetworks" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="ConnectionTechnologies"></label>
                    <input asp-for="ConnectionTechnologies" class="form-control" />
                    <span asp-validation-for="ConnectionTechnologies" class="text-danger"></span>
                </div>
            </div>
            <hr id="AddformHr" />

            <h5 class="addformH">دوربین</h5>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="CameraHas"></label>
                    <input asp-for="CameraHas" class="form-control" />
                    <span asp-validation-for="CameraHas" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="CameraRecording"></label>
                    <input asp-for="CameraRecording" class="form-control" />
                    <span asp-validation-for="CameraRecording" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="CameraResolution"></label>
                    <input asp-for="CameraResolution" class="form-control" />
                    <span asp-validation-for="CameraResolution" class="text-danger"></span>
                </div>
            </div>
            <hr id="AddformHr" />

            <h5 class="addformH">امکانات نرم افزاری</h5>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="OSVersion"></label>
                    <input asp-for="OSVersion" class="form-control" />
                    <span asp-validation-for="OSVersion" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="OS"></label>
                    <input asp-for="OS" class="form-control" />
                    <span asp-validation-for="OS" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">

            </div>
            <hr id="AddformHr" />

            <h5 class="addformH">نقد و بررسی و امتیازدهی</h5>
            <!--Editor-->
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="Description" class="control-label"></label>
                    <div>
                        <textarea id="Description" name="Description" asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="justify-content-center text-center">
                @if (Model.CellphoneId == 0)
                {
                    <div class="btn-group">

                        <button type="submit" class="btn btn-outline-success" id="submitData">
                            ثبت گوشی موبایل
                            <i class="fas fa-check"></i>
                        </button>
                    </div>
                }
                else
                {
                    <div class="btn-group">

                        <button type="submit" class="btn btn-outline-success" id="submitData">
                            ویرایش لپ‌تاپ
                            <i class="fas fa-check"></i>
                        </button>
                    </div>
                }
                <div class="btn-group">
                    <a class="btn btn-outline-secondary" asp-action="Index">
                        بازگشت
                        <i class="fas fa-arrow-left"></i>
                    </a>
                </div>
            </div>
            <input type="hidden" name="redirectUrl" value="@Url.Action("Index", "Laptop")" />
        </form>
    </div>
</div>
@section scripts
    {
    <script src="~/js/ckeditor/ckeditor.js"></script>
    <script src="~/js/adminpanel.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript">
        CKEDITOR.replace("Description");
    </script>

    <script>
        $(document).on('click', '#submitData', function (evt) {
            evt.preventDefault();

            var data = new FormData();

            //دریافت مقادیر موجود
            $('input,select').each(function (x, y) {
                data.append($(y).attr('name'), $(y).val());
            });

            //دریافت مقادیر ادیتور
            var editorValue = CKEDITOR.instances['Description'].getData();
            data.append('Description', editorValue);

            //ارسال به سمت سرور
            $.ajax({
                type: "post",
                url:'@Url.Action("Add","Cellphone",new { area = "Admin" })',
                contentType: false,
                processData: false,
                data: data
                //وقتی اطلاعات سمت سرور رفت و جواب گرفتیم
            }).done(function (res) {
                    if (res.status === "success") {
                        alert(res.message);

                        //برای برگشتن به ایندکس بعد از ادیت یا ثبت
                        window.location.href = '@Url.Action("Index", "Cellphone")';
                    }
                    else {
                        $.each(res.error, function (a, b) {
                            alert(b);
                        });
                    }
                    //برای وقتی که اطلاعات سمت سرور نرفت و در همان ابتدا خطا داد
                }).fail(function (xhr, b, error) {
                    swal("Oops", error, "error");
                })
        });
    </script>
}
