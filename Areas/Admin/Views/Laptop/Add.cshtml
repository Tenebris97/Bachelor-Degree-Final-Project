            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="Bluetooth"></label>
                    <input asp-for="Bluetooth" class="form-control" />
                    <span asp-validation-for="Bluetooth" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="BatteryType"></label>
                    <input asp-for="BatteryType" class="form-control" />
                    <span asp-validation-for="BatteryType" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="OS"></label>
                    <input asp-for="OS" class="form-control" />
                    <span asp-validation-for="OS" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="OSVersion"></label>
                    <input asp-for="OSVersion" class="form-control" />
                    <span asp-validation-for="OSVersion" class="text-danger"></span>
                </div>
            </div>
            <hr id="AddformHr" />

            <h5 class="addformH">نقد و بررسی و امتیازدهی</h5>
            <!--Editor-->
            <div class="form-row">
                <div class="form-group col-md-12">
                    <label asp-for="Description" class="control-label"></label>
                    <div>
                        <textarea id="Description" name="Description" asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="justify-content-center text-center">
                @if (Model.LaptopId == 0)
                {
                    <div class="btn-group">

                        <button type="submit" class="btn btn-outline-success" id="submitData">
                            ثبت لپ‌تاپ
                            <i class="fas fa-check"></i>
                        </button>
                    </div>
                }
                else
                {
                    <div class="btn-group">

                        <button type="submit" class="btn btn-outline-success" id="submitData">
                            ویرایش لپ‌تاپ
                            <i class="fas fa-check"></i>
                        </button>
                    </div>
                }
                <div class="btn-group">
                    <a class="btn btn-outline-secondary" asp-action="Index">
                        بازگشت
                        <i class="fas fa-arrow-left"></i>
                    </a>
                </div>
            </div>
            <input type="hidden" name="redirectUrl" value="@Url.Action("Index", "Laptop")" />
        </form>
    </div>
</div>
@section scripts
    {
    <script src="~/js/ckeditor/ckeditor.js"></script>
    <script src="~/js/adminpanel.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script type="text/javascript">
        CKEDITOR.replace("Description");
    </script>

    <script>
        $(document).on('click', '#submitData', function (evt) {
            evt.preventDefault();

            var data = new FormData();

            //دریافت مقادیر موجود
            $('input,select').each(function (x, y) {
                data.append($(y).attr('name'), $(y).val());
            });

            //دریافت مقادیر ادیتور
            var editorValue = CKEDITOR.instances['Description'].getData();
            data.append('Description', editorValue);

            //ارسال به سمت سرور
            $.ajax({
                type: "post",
                url:'@Url.Action("Add","Laptop",new { area = "Admin" })',
                contentType: false,
                processData: false,
                data: data
                //وقتی اطلاعات سمت سرور رفت و جواب گرفتیم
            }).done(function (res) {
                    if (res.status === "success") {
                        swal({
                            title: "لپ‌تاپ",
                            text: res.message,
                            icon: "success",
                            button: "ادامه"
                        })
                            .then((a) => {
                                if (a) {
                                    window.location.href = '@Url.Action("Index", "Laptop")';
                                }
                            });              
                    }
                    else {
                        $.each(res.error, function (a, b) {
                            alert(b);
                        });
                    }
                    //برای وقتی که اطلاعات سمت سرور نرفت و در همان ابتدا خطا داد
                }).fail(function (xhr, b, error) {
                    swal("Oops", error, "error");
                })
        });
    </script>
}
