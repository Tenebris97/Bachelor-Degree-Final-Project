                    <span asp-validation-for="GPUModel" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="GPUSize"></label>
                    <input asp-for="GPUSize" class="form-control" />
                    <span asp-validation-for="GPUSize" class="text-danger"></span>
                </div>
            </div>
            <hr id="AddformHr" />

            <h5 class="addformH">صفحه نمایش</h5>
