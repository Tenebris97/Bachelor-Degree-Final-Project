                <div class="form-group col-md-4">
                    <label asp-for="ODD"></label>
                    <input asp-for="ODD" class="form-control" />
                    <span asp-validation-for="ODD" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Webcam"></label>
                    <input asp-for="Webcam" class="form-control" />
                    <span asp-validation-for="Webcam" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="Speaker"></label>
