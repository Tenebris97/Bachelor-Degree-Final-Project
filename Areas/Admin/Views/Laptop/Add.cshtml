                    <span asp-validation-for="CpuSeries" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="CpuType"></label>
                    <input asp-for="CpuType" class="form-control" />
                    <span asp-validation-for="CpuType" class="text-danger"></span>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="CpuFrequency"></label>
                    <input asp-for="CpuFrequency" class="form-control" />
                    <span asp-validation-for="CpuFrequency" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="CpuCache"></label>
                    <input asp-for="CpuCache" class="form-control" />
                    <span asp-validation-for="CpuCache" class="text-danger"></span>
                </div>
            </div>
            <hr id="AddformHr" />

            <h5 class="addformH">حافظه RAM</h5>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="RAM"></label>
                    <input asp-for="RAM" class="form-control" />
                    <span asp-validation-for="RAM" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="RAMType"></label>
                    <input asp-for="RAMType" class="form-control" />
                    <span asp-validation-for="RAMType" class="text-danger"></span>
                </div>
            </div>
            <hr id="AddformHr" />

            <h5 class="addformH">حافظه داخلی</h5>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="Storage"></label>
                    <input asp-for="Storage" class="form-control" />
                    <span asp-validation-for="Storage" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="StorageType"></label>
                    <input asp-for="StorageType" class="form-control" />
                    <span asp-validation-for="StorageType" class="text-danger"></span>
                </div>
            </div>
            <hr id="AddformHr" />

            <h5 class="addformH">پردازنده گرافیکی</h5>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label asp-for="GPUManufactor"></label>
                    <input asp-for="GPUManufactor" class="form-control" />
                    <span asp-validation-for="GPUManufactor" class="text-danger"></span>
                </div>
                <div class="form-group col-md-4">
                    <label asp-for="GPUModel"></label>
