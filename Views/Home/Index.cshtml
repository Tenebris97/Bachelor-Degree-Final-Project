@model FinalProject.Models.MultiModels

@using Microsoft.AspNetCore.Identity
@using FinalProject.Models

@inject SignInManager<ApplicationUser> signInManager;
@inject UserManager<ApplicationUser> userManager;

@{
    ViewData["Title"] = "Home Page";
}

@section searchSection{
    <form class="form-inline ml-auto">
        <div class="md-form my-0">
            <input class="form-control" type="text" placeholder="جستجو..." aria-label="Search" id="txtSearch" name="txtSearch">
        </div>
        <button asp-controller="Home" asp-action="Search" class="btn aqua-gradient waves-effect btn-rounded btn-md" type="submit">جستجو</button>
    </form>
}

@section basket{
    @Html.Partial("_Basket")
}

<div class="row">

    <div class="col-md-3">
        @Html.Partial("_RecentNewsPartial", Model.LastNews)
    </div>

    <div class="col-md-9">
        <div class="row">
            <div class="col-md-12">
                @Html.Partial("_Promotion", Model.PromotionsListViewModel)
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @Html.Partial("_TopSelling", Model.TopSellings)
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @Html.Partial("_MostViewd", Model.MostViewd)
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @Html.Partial("_Cheapest", Model.Cheapest)
            </div>
        </div>
    </div>

</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $(document).ready(function () {
        $(".owl-carousel").owlCarousel();
    });
    $('.owl-carousel').owlCarousel({
        loop: true,
        margin: 10,
        nav: true,
        responsive: {
            0: {
                items: 1
            },
            600: {
                items: 3
            },
            1000: {
                items: 5
            }
        }
    });
</script>
</div>

