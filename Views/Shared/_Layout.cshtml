                    {
                        <li class="nav-item">
                            <a class="nav-link btn-outline-primary waves-effect" asp-area="Admin" asp-controller="Admin" asp-action="Index">مدیریت سایت</a>
                        </li>
                    }
                </ul>
            </div>
            <!--Search-->
                <form class="form-inline ml-auto">
                    <div class="md-form my-0">
                        <input style="width: 300px;" class="form-control" type="text" placeholder="نام کالا، دسته بندی و یا برند را جستجو کنید..." aria-label="Search" id="txtSearch" name="txtSearch">
                    </div>
                    <button asp-area="" asp-controller="Product" asp-action="Search" class="btn blue-gradient waves-effect btn-rounded btn-md" type="submit">
                      <i class="fas fa-search"></i>
                    </button>
                </form>
            @RenderSection("basket", false)
        </div>
    </nav>

    <div class="container-fluid">
