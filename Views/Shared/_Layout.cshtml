                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a  asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">فروشگاه</a>
            </div>
            <div class="rtl navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">

                @await Html.PartialAsync("_LoginPartial")

